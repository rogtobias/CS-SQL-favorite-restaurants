<h1>Add a new restaurant</h1>
<form action="/restaurants/new" method="post">
  <label for="restaurant-name">Restaurant Name</label>
  <input type="text" name="restaurant-name" id="restaurant-name">
  <h3>Does this restaurant serve alcohol?</h3>
  <label>
    <input type="radio" name="restaurant-alchohol" value="True"> Yes
  </label>
  <label>
    <input type="radio" name="restaurant-alchohol" value="False"> No
  </label>
  <br><br>
  <select name="cuisine-id">
    if(Model == 0)
    {
      <option value="Unknown">Unknown</option>
    }
    else 
    {
      @foreach(var cuisine in Model)
      {
        <option value="@cuisine.GetId()">@cuisine.GetCuisineType()</option>
      }
    }
  </select>
  <br><br>
  <button type="submit" name="button">Add new Restaurant</button>
</form>
<p><a href="/">Back home</a></p>
<p><a href="/restaurants">View all restaurants</a></p>
